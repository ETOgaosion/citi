
.container{
  margin-top: 2px;
  padding: 0em;
}
.username{
  font-size: 13px;
  text-align: center;
}
.head{
  margin-top:10px ;
  position: relative;
  height: 34vh;
}
.image{
  margin-top: 2px;
  width: 100%;
  height: 33vh;
  border-bottom-color: thistle;
  border-bottom-style: solid;
}

.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 1rpx 0 ;
  align-items: center;
}
.footer-box .shop-contact {
  position: relative;
  height: 100%;
  width: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer-box .shop-share {
  position: relative;
  width: 40px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer-box .shop-collect{
  position: relative;
  width: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer-box .buy{
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #ff6850;
  color:#fff;
  font-size: 34rpx;
  flex: 1;
  margin-left: 32rpx;
}
.footer-box .cart{
  text-align: center;
  height: 100%;
  width: 250rpx;
  line-height: 100rpx;
  background-color: #e64340;
  color:#fff;
  font-size: 34rpx;
  flex: 1;
}
.icon{
  margin-left: 25rpx;
  margin-top: 1%;
  width: 35px;
  height: 30px;
}
.good-detail{
  width: 100%;
}
.good-info{
  height: 70px;
  background-color: rgb(240, 240, 240);
  display: flex;
  flex-direction: column;
  border-bottom-color: rgba(190, 190, 190, 0.589);
  border-bottom-width: 10px;
}
.good-name{
  color: black;
  font-size: 20px;
  margin-left: 20px;
  margin-top: 10px;
}
.good-price{
  color: #e64340;
  font-size: 13px;
  margin-left: 20px;
}
.type .good-choose-text{
  margin-left: 10px;
}

.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 999;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pop-goods-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 32rpx;
  margin-right: 32rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.pop-img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 26rpx;
}
.pop-img-box .goods-thumbnail{
  width: 120rpx;
  height: 120rpx;
}
.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-goods-price {
  font-size:26rpx;
  color:#e64340;
  margin-top:20rpx; 
}
.pop-goods-price .t1 {
  font-size:50rpx;
}
.pop-goods-price-original{
  font-size:26rpx;
  color: #aaa;
  text-decoration: line-through;
  margin-left: 16rpx;
}
.pop-goods-close{
  width: 36rpx;
  height: 36rpx;
}
.size-label-box2 {
  width: 100vw;
  background: #fff;
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  font-size:26rpx;
  color:#000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}
.size-label-box .label-item.active{
  color: #e64340;
  border: 1px solid #e64340;
}
.buy-num-box{
   display: flex;
   justify-content: space-between;
   padding: 30rpx 30rpx 48rpx 0;
   margin-left: 30rpx; 
   border-top: 1px solid #eee;
   margin-top: 30rpx;
   align-items: center;
}
.num-label{
  font-size:26rpx;
  color:#000000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.popup-join-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
  margin-bottom: 5px;
  border-radius: 15px;
}
.popup-buy-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e69040;
  margin-top: 5px;
  border-radius: 15px;
}
.buy-num-box .num-box .hui{
  background-color: #f5f5f9;
}